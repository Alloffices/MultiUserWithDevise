<p id="notice"><%= notice %></p>

<div>
	<%= image_tag @post.image.url(:medium) %>
</div>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<%= @post.user.email %>
<%= @post.user.name %>
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<hr />
<h3>
	<%= @post.comments.count %> comments
</h3>
	<%= render @post.comments %>
<hr />
<h4>Add a comment: </h4>
<%= render "comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
