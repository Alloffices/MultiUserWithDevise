<div class="container">
  <div class="signin card-container">
        <h3>Create New Project</h3>
    <hr />
<%= form_for @post, :html => { :multipart => true } do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- upload images with paperclip gem -->
  <div class="field">
    <%= f.file_field :image, class: "form-control", placeholder: "Upload Image" %>
  </div>
  <!-- end -->

  <div class="field">
    <%= f.text_field :title, class: "form-control", placeholder: "Title"  %>
  </div>
  <div class="field">
    <%= f.text_area :content, class: "form-control", placeholder: "Content"  %>
  </div>
  <div class="actions">
    <%= f.submit "Create New Project", class: "btn btn-lg btn-primary btn-block btn-signin"  %>
  </div>
<% end %>

  </div>
</div>
