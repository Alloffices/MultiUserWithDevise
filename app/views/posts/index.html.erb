<p id="notice"><%= notice %></p>

<% if user_signed_in? %>

<br />

<div class="container">
  <%= link_to 'New Project', new_post_path, class: "btn btn-primary btn-block" %>
</div>
<br />
<div class="container">
<div id="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post_image">
        <%= link_to (image_tag post.image.url(:small)), post_path(post) %>
      </div>
      <div class="post_content">
        <div class="title">
          <h2>
            <%= link_to post.title, post_path(post) %>
          </h2>
        </div>
        <div class="data clearfix jumbotron">
          <h5>
            Post by
            <%= post.user.name %>
          </h5>
          <h5>
            Project Requests
            <%= post.get_upvotes.size %>
          </h5>
          <div class="wrapper">

          <% if current_user.try(:admin?)%>
            <%= link_to 'Show', post %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
            <%= link_to "Join", like_post_path(post), method: :get, class: "btn btn-primary btn-block" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
<% else %>

<h1>Listing Posts</h1>

<% end %>